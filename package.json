{
    "name": "node-with-ts",
    "version": "1.0.0",
    "description": "",
    "main": "build/index.js",
    "signale": {
        "displayScope": true,
        "displayBadge": true,
        "displayDate": true,
        "displayFilename": true,
        "displayLabel": true,
        "displayTimestamp": true,
        "underlineLabel": true,
        "underlineMessage": false,
        "underlinePrefix": true,
        "underlineSuffix": true,
        "uppercaseLabel": true
    },
    "scripts": {
        "start": "doppler run -- node build/index.js",
        "run": "node build/index.js",
        "build": "tsc && doppler run --",
        "dev": "concurrently \"tsc -w\" \"nodemon doppler run -- node build/index.js\"",
        "tsc": "tsc",
        "tsc:watch": "nodemon --watch src --exec tsc",
        "type:locales": "cd locales && type-locales && mv locales.ts ../src/utils/locales.ts && cd .."
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@sentry/node": "7.58.0",
        "canvas": "2.11.2",
        "cors": "2.8.5",
        "dd-trace": "4.6.0",
        "discord-hybrid-sharding": "github:meister03/discord-hybrid-sharding",
        "discord-together": "1.3.31",
        "discord.js": "14.11.0",
        "dotenv": "16.3.1",
        "express": "4.18.2",
        "figlet": "1.6.0",
        "i18n": "0.15.1",
        "jsonwebtoken": "9.0.1",
        "mongoose": "7.3.4",
        "mongoose-encryption": "2.1.2",
        "signale": "1.4.0",
        "statcord.js": "3.4.3",
        "stripe": "12.12.0",
        "yasha": "github:davidzeng0/yasha",
        "youtubei.js": "5.3.0"
    },
    "devDependencies": {
        "@types/cors": "2.8.13",
        "@types/express": "4.17.17",
        "@types/figlet": "1.5.6",
        "@types/i18n": "0.13.6",
        "@types/jsonwebtoken": "9.0.2",
        "@types/node": "20.4.2",
        "@types/signale": "1.4.4",
        "@types/yasha": "github:eliyya/yasha-types",
        "concurrently": "8.2.0",
        "nodemon": "3.0.1",
        "standard": "17.1.0",
        "transjson": "github:OnekiDevs/transjson#jspkg",
        "type-locales": "github:OnekiDevs/type-locales",
        "typescript": "5.1.6"
    },
    "optionalDependencies": {
        "bufferutil": "4.0.7",
        "utf-8-validate": "6.0.3"
    },
    "eslintConfig": {
        "extends": "./node_modules/standard/eslintrc.json"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "useTabs": false,
        "semi": false,
        "singleQuote": true,
        "quoteProps": "as-needed",
        "trailingComma": "all",
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "endOfLine": "auto"
    },
    "type": "module"
}
