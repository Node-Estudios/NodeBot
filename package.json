{
    "name": "nodebot",
    "version": "1.0.0",
    "description": "",
    "main": "build/index.js",
    "engines": {
        "node": ">=22.18"
    },
    "signale": {
        "displayScope": true,
        "displayBadge": true,
        "displayDate": true,
        "displayFilename": true,
        "displayLabel": true,
        "displayTimestamp": true,
        "underlineLabel": true,
        "underlineMessage": false,
        "underlinePrefix": true,
        "underlineSuffix": true,
        "uppercaseLabel": true
    },
    "scripts": {
        "start": "doppler run -- node build/index.js",
        "run": "node build/index.js",
        "build": "npm run db:generate && npm run type:locales && npx tsc",
        "dev": "nodemon -e ts --exec \"npm start\"",
        "tsc:watch": "nodemon -e ts --exec tsc",
        "type:locales": "type-locales && if [ -f \"build/utils/testLocales.js\" ]; then node build/utils/testLocales.js; fi",
        "db:migrate": "prisma migrate dev",
        "db:generate": "prisma generate"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@discordjs/voice": "0.18.0",
        "@eliyya/yasha": "^3.2.0",
        "@prisma/client": "6.13.0",
        "@sentry/cli": "2.51.1",
        "@sentry/integrations": "^7.114.0",
        "@sentry/node": "10.3.0",
        "@sentry/profiling-node": "10.3.0",
        "bindings": "1.5.0",
        "cors": "2.8.5",
        "datadog-metrics": "0.12.1",
        "dd-trace": "5.62.0",
        "discord-hybrid-sharding": "github:Node-Estudios/discord-hybrid-sharding#ts-rewrite",
        "discord.js": "14.21.0",
        "express": "5.1.0",
        "figlet": "1.8.2",
        "i18n": "0.15.1",
        "jsonwebtoken": "9.0.2",
        "moment": "2.30.1",
        "signale": "1.4.0",
        "statcord.js": "3.4.3",
        "stripe": "18.4.0",
        "type-locales": "3.2.4",
        "youtubei.js": "5.8.0"
    },
    "devDependencies": {
        "@eslint/js": "9.33.0",
        "@eslint/json": "0.13.1",
        "@eslint/markdown": "7.1.0",
        "@types/cors": "2.8.19",
        "@types/express": "5.0.3",
        "@types/figlet": "1.7.0",
        "@types/i18n": "0.13.12",
        "@types/jsonwebtoken": "9.0.10",
        "@types/node": "24.2.0",
        "@types/signale": "1.4.7",
        "cmake-js": "7.3.1",
        "concurrently": "9.2.0",
        "eslint": "9.33.0",
        "eslint-config-prettier": "10.1.8",
        "eslint-plugin-prettier": "5.5.4",
        "globals": "16.3.0",
        "nodemon": "3.1.10",
        "prettier": "3.6.2",
        "prisma": "6.13.0",
        "transjson": "github:OnekiDevs/transjson#1187c4b",
        "typescript": "5.9.2",
        "typescript-eslint": "8.39.0"
    },
    "optionalDependencies": {
        "bufferutil": "4.0.9",
        "utf-8-validate": "6.0.5"
    },
    "imports": {
        "#structures/*": "./build/structures/*",
        "#utils/*": "./build/utils/*",
        "#cache/*": "./build/cache/*",
        "#prisma/client": "./build/prisma/client/client.js",
        "#prisma/*": "./build/prisma/*",
        "#env": "./build/env.js",
        "#constants": "./build/constants.js"
    },
    "prisma": {
        "schema": "src/prisma/schema.prisma",
        "seed": ""
    },
    "type": "module"
}
