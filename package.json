{
    "name": "nodebot",
    "version": "1.0.0",
    "description": "",
    "main": "build/index.js",
    "engines": {
        "node": ">=22"
    },
    "signale": {
        "displayScope": true,
        "displayBadge": true,
        "displayDate": true,
        "displayFilename": true,
        "displayLabel": true,
        "displayTimestamp": true,
        "underlineLabel": true,
        "underlineMessage": false,
        "underlinePrefix": true,
        "underlineSuffix": true,
        "uppercaseLabel": true
    },
    "scripts": {
        "start": "doppler run -- node build/index.js",
        "run": "node build/index.js",
        "build": "npm run db:generate && npm run type:locales && npm i --save-dev @types/node-fetch && npx tsc",
        "dev": "nodemon -e ts --exec \"npm start\"",
        "tsc:watch": "nodemon -e ts --exec tsc",
        "type:locales": "type-locales && if [ -f \"build/utils/testLocales.js\" ]; then node build/utils/testLocales.js; fi",
        "db:migrate": "prisma migrate dev",
        "db:generate": "prisma generate",
        "postinstall": "patch-package"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@discordjs/voice": "^0.18.0",
        "@prisma/client": "6.6.0",
        "@sentry/cli": "^2.20.5",
        "@sentry/node": "7.120.3",
        "@sentry/profiling-node": "1.1.2",
        "bindings": "1.5.0",
        "cors": "2.8.5",
        "datadog-metrics": "0.11.0",
        "dd-trace": "4.11.1",
        "discord-hybrid-sharding": "github:Node-Estudios/discord-hybrid-sharding#ts-rewrite",
        "discord.js": "14.17.3",
        "dotenv": "16.3.1",
        "express": "4.21.2",
        "figlet": "1.6.0",
        "i18n": "0.15.1",
        "jsonwebtoken": "9.0.1",
        "moment": "2.29.4",
        "signale": "1.4.0",
        "statcord.js": "3.4.3",
        "stripe": "12.18.0",
        "type-locales": "3.2.4",
        "yasha": "github:Node-Estudios/ts-yasha#main",
        "youtubei.js": "15.0.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.25.0",
        "@eslint/json": "^0.12.0",
        "@eslint/markdown": "^6.4.0",
        "@types/cors": "2.8.13",
        "@types/express": "4.17.17",
        "@types/figlet": "1.5.6",
        "@types/google-protobuf": "^3.15.12",
        "@types/i18n": "0.13.6",
        "@types/jsonwebtoken": "9.0.2",
        "@types/node": "22.14.1",
        "@types/node-fetch": "^2.6.13",
        "@types/signale": "1.4.4",
        "concurrently": "8.2.0",
        "eslint": "^9.25.0",
        "eslint-config-prettier": "^10.1.2",
        "eslint-plugin-prettier": "^5.2.6",
        "globals": "^16.0.0",
        "nodemon": "3.0.1",
        "patch-package": "^8.0.0",
        "prettier": "^3.5.3",
        "prisma": "6.6.0",
        "transjson": "github:OnekiDevs/transjson#1187c4b",
        "typescript": "5.8.3",
        "typescript-eslint": "^8.30.1"
    },
    "optionalDependencies": {
        "bufferutil": "4.0.7",
        "utf-8-validate": "6.0.3"
    },
    "imports": {
        "#structures/*": "./build/structures/*",
        "#utils/*": "./build/utils/*",
        "#cache/*": "./build/cache/*",
        "#prisma/client": "./build/prisma/client/client.js",
        "#prisma/*": "./build/prisma/*",
        "#env": "./build/env.js",
        "#constants": "./build/constants.js"
    },
    "prisma": {
        "schema": "src/prisma/schema.prisma",
        "seed": ""
    },
    "type": "module"
}
