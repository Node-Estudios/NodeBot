{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/build/index.js",
            "outFiles": [
                "${workspaceFolder}/build/**/*.js"
            ],
            "cwd": "${workspaceRoot}",
            "env": {
                "NODE_ENV": "development"
            },
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "preLaunchTask": "prepare app to debug",
        },
        {
            "name": "ts-node",
            "type": "node",
            "request": "launch",
            "args": [
                "src/index.ts"
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register",
                "--nolazy"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart",
            "sourceMaps": true
        },
        {
            "type": "node-terminal",
            "name": "Debug Current TS File (ts-node)",
            "request": "launch",
            "command": "ts-node -r src/index.ts",
            "cwd": "${workspaceFolder}"
        },
    ]
}